<div class="newsletter-subscribe-wrapper blue-bg">
    <div class="container">
        <div class="row">
            <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12">
                <div class="newsletter-heading text-white">
                    <h4 class="white">{{ heading }}</h4>
                </div>
            </div>
            <div class="col-xxl-8 col-xl-8 col-lg-8 col-md-8 col-sm-12">
                <form class="form-design">
                    <div class="row">
                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12">
                            <div class="form-group input-design">
                                <label for="emailAddress" class="d-none">Email Address</label>
                                <input id="emailAddress" type="email" placeholder="Email Address" name="Email Address" />
                            </div>
                        </div>
                        <div class="col-xxl-3 col-xl-3 col-lg-3 col-md-3 col-sm-12">
                            <div class="form-group submit-design">
                                <button class="orange-btn form-btn" type="submit" value="Subscribe">Subscribe</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>