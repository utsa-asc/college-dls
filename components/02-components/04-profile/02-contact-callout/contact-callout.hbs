<div class="staff-card-component-div">
    <div class="row m-0">
        <div class="col-xxl-4 col-xl-4 col-lg-4 col-md-4 col-sm-12">
            <div class="staff-card-img">
                <img class="clip-top-img" src="{{path image}}" alt="Card Image" />
            </div>
        </div>
        <div class="col-xxl-8 col-xl-8 col-lg-8 col-md-8 col-sm-12">
            <div class="staff-card-content">
                <h4>Contact</h4>
                <p class="staff-card-name">{{ firstName }} {{ lastName }}</p>
                <p class="staff-card-department">{{ department }}</p>
                <a class="mail-info" href="mailto:{{ email }}">{{ email }}</a>
            </div>
        </div>
    </div>
</div>