<section class="content-img-design blue-offset-bg pt-5 pb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 order-last">
                <div class="images-design">
                    <img width="560px" height="320px" class="clip-mask-top-right" src="{{path image }}" alt="Heading Image" loading="lazy" />
                </div>
            </div>
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-12 order-first">
                <div class="heading-paragraph-design">
                    <h2 class="h3">{{ headline }}</h2>
                    <div class="paragraph-text">
                         {{{ content }}}
                    </div>
                    <div class="orange-action-btn">
                        {{#each actions}}
                        {{#if @first}}
                        <div class="orange-action-btn">
                            <a href="{{ url }}" class="action-btn"> {{ text }} <i class="fas fa-arrow-right"
                                    aria-hidden="true"></i></a>
                        </div>
                        {{/if}}
                        {{#if @last}}
                        <div class="orange-action-btn">
                            <a href="{{ url }}" class="action-btn"> {{ text }} <i class="fas fa-arrow-right"
                                    aria-hidden="true"></i></a>
                        </div>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
