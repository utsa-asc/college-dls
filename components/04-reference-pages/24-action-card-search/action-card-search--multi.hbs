<div id="body-wrapper">
  <div id="skip-content"><a class="Skip-btn" href="#skipToContent">Skip To Main Content</a></div>
  <!-- Header Section -->
  <header id="header" class="main-header sticky-header">
    {{ render '@global-header--rebrand' }}
    {{ render '@site-navigation' }}
  </header>
  <!-- Header Section End -->
  <!-- Main Content Body -->
  <main>
 <!--Slider -->
    <section class="slider-wrapper" id="main-slider-wrapper">
      {{> @banner--slim}}
      {{> @breadcrumb }}
    </section>
    <!-- End Slider -->
    <!--Begin Form Element-->
    <section class="pt-5 pb-0">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="program-listing-a orange-bg mb-5">
              <form class="form-design mt-2 mb-0" id="formResources">
                <div class="row">
                  <div class="col-xxl-10 col-xl-10 col-lg-10 col-md-12 col-sm-12">
                    <div class="form-group input-design"><label class="visually-hidden" for="search-resources">Search Employers</label> <input id="search-resources" name="search-resources"
                        placeholder="Search Employers" type="text" /></div>
                  </div>
                  <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-12 col-sm-12">
                    <div class="form-group submit-design"><button class="blue-btn form-btn" title="Search
                        Employers"
                        type="submit" value="Search">Search</button></div>
                  </div>
                </div>
              </form>
            </div>
            <h3 id="search-results" class="orange-a11y visually-hidden py-5">Search Results</h3>
            <h2 id="facultyTop">Employer Partners</h2>
            <p>Lorem ipsum dolor sit amet, connetutur sadipscing elitr, sed diam nonumy elmod tempor</p>
          <hr/>
            
           
           </div>
        </div>
      </div>
     
    </section>
    <!--End Form Element-->

    <!--Begin Search Results-->
    <section class="content-listing py-5" id="skipToContent">
    <div class="container">
      
        <!-- featured cards -->
        <div class="row">
          {{#each cards as |card|}}
            <!-- if featured is true --> 
            {{#if featured}}
            <div class="col-lg-4 col-md-6 col-sm-12 picture-item">
                {{render '@action-card' card merge=true}}
            </div>
            {{/if}}
          {{/each}}
        </div>
        <!-- list items -->
         <div class="row">
          <h3 class="blue-a11y pb-3">More Employers</h3>
          <p>Lorem ipsum dolor sit amet, connetutur sadipscing elitr, sed diam nonumy elmod tempor</p>
          <hr/>
          {{#each cards as |card|}}
            <!-- if featured is false -->
              {{#unless featured}}
            <div class="col-md-3 col-sm-12 mb-0 picture-item">
                <ul class="content-card-content">
                  <li ><a href="#">{{heading}}</a></li>
                </ul>
            </div>
               {{/unless}}
         {{/each}}
        </div>
      </div>
</section>
<!--End Search Results-->

  </main>
  {{ render '@back-to-top' }} 
  <!-- End Main Content Body -->
  {{ render '@global-footer--rebrand-secondary' }}
</div>